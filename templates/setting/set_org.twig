{# empty Twig template #}
<?xml version="1.0" encoding="UTF-8"?>

<script src="{{url}}js/setting/set_org.js" type="text/javascript"></script>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/setting/action/actionOrg.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb">
                <table class="tb_set" >
                    <tr>
                        <td>机构编码</td>
                        <td class="td_left">
                            <input  id="org_code" name="org_code" class="input_text" type="text" value="{{info.OrgCode}}" required></td>
                    </tr>
                    <tr>
                        <td>机构名称</td><td class="td_left">
                            <input  id="org_name" name="org_name" class="input_text" type="text" value="{{info.OrgName}}" required></td>
                    </tr>
                    <tr>
                        <td>统一社会信用代码</td><td class="td_left">
                            <input  id="credit_code" name="credit_code" class="input_text" type="text" value="{{info.CreditCode}}" required></td>
                    </tr>
                    <tr>
                        <td>地址</td><td class="td_left">
                            <input  id="org_address" name="org_address" class="input_text" type="text" value="{{info.OrgAddress}}" required></td>
                    </tr>
                    <tr>
                        <td>联系电话</td><td class="td_left">
                            <input  id="org_phone" name="org_phone" class="input_text" type="text" value="{{info.OrgPhone}}" required></td>
                    </tr>
                    <tr>
                        <td>开户行</td><td class="td_left">
                            <input  id="open_bank" name="open_bank" class="input_text" type="text" value="{{info.OpenBank}}" required></td>
                    </tr>
                    <tr>
                        <td>开户帐号</td><td class="td_left">
                            <input  id="bank_account" name="bank_account" class="input_text" type="text" value="{{info.BankAccount}}" required></td>
                    </tr>
                    <tr>
                        <td>负责人</td><td class="td_left">
                            <input  id="charge_person" name="charge_person" class="input_text" type="text" value="{{info.ChargePerson}}" required></td>
                    </tr>
                    <tr>
                        <td>负责人电话</td><td class="td_left">
                            <input  id="charge_phone" name="charge_phone" class="input_text" type="text" value="{{info.ChargerPhone}}" required></td>
                    </tr>

                    <tr>
                        <td>机构描述 </td><td class="td_left"><textarea {{readonly}} id="org_desc" name="org_desc"  class="input_textarea" type="text">{{info.OrgDesc}}</textarea>  
                        </td>
                    </tr> 
                </table>
                <div class="bottom_button">
                    <input type="text" id="id" name="id" hidden="hidden" value="{{info.Id}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="button" onclick="toPage('../../modules/setting/allOrg.php?pagetype={{pagetype}}')" name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


