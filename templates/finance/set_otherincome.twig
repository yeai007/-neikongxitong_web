{# empty Twig template #}
<?xml version="1.0" encoding="UTF-8"?>
<script src="{{url}}js/teach/set_teacher.js" type="text/javascript"></script>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/finance/action/actionOtherInCome.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb">
                <table class="tb_set" >
                    <tr>
                        <td>金额</td>
                        <td class="td_left"><input  id="amount" name="amount" class="input_text" type="text" value="{{info.Amount}}" required></td >
                    </tr>
                    <tr>
                        <td>经办人</td>
                        <td  class="td_left">
                            <select class="select userrole" name="agent" id="agent">
                                {% for item in write_person %}
                                    <option class="select" {% if info.Agent==item.UserId %}selected="selected"{% else %}''{% endif %} value="{{item.UserId}}" >{{item.UserName}}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>凭证号</td><td  class="td_left">
                            <input {{readonly}} id="voucher_num" name="voucher_num"  class="input_text" type="text" value="{{info.VoucherNum}}"/>
                        </td>
                    </tr>
                    <tr>
                        <td>收入说明</td>
                        <td  class="td_left"><input  id="income_desc" name="income_desc" class="input_text" value="{{info.IncomeDesc}}" type="text" required></td>
                    </tr>
                    <tr>
                        <td>录入人</td>
                        <td  class="td_left">
                            <select class="select userrole" name="write_person" id="write_person">
                                {% for item in write_person %}
                                    <option class="select" {% if info.WritePerson==item.UserId %}selected="selected"{% else %}''{% endif %} value="{{item.UserId}}" >{{item.UserName}}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>录入日期</td>
                        <td  class="td_left"><input  id="write_date" name="write_date" class="input_text" {% if info.WriteDate %}value="{{info.WriteDate}}"{% else %} value="{{"now"|date("Y-m-d")}}"{% endif %}  type="text" required></td>
                    </tr>
                </table>
                <div class="bottom_button">
                    <input type="text" name="id" hidden="hidden" value="{{info.Id}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="button" onclick="toClose({{mid}},{{pid}} )"  name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


