{# empty Twig template #}
<?xml version="1.0" encoding="UTF-8"?>
<script src="{{url}}js/finance/set_reim.js" type="text/javascript"></script>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/finance/action/actionReim.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb">
                <table class="tb_set" >
                    <tr>
                        <td>录入日期</td>
                        <td class="td_left"><input  id="writedate" name="writedate" class="input_text" type="text" {% if info.WriteDate %}value="{{info.WriteDate}}"{% else %} value="{{"now"|date("Y-m-d")}}"{% endif %}  required></td >
                    </tr>   
                    <tr>
                        <td>报销人</td>
                        <td class="td_left"><input  id="reim_person" name="reim_person" class="input_text" type="text" value="{{info.ReimPerson}}" required></td >
                    </tr>
                    <tr>
                        <td>项目编号</td>
                        <td class="td_left"><input  id="pro_code" name="pro_code" class="input_text" type="text" value="{{info.ProCode}}" required></td >
                        <td>项目名称</td>
                        <td  class="td_left">
                            <input {{readonly}} id="pro_name" name="pro_name"  class="input_text" type="text" value="{{info.ProName}}"/>
                        </td>
                    </tr>
                    <tr>
                        <td>类别</td>
                        <td class="td_left">
                            <select class="select userrole" name="reim_type" id="reim_type">
                                {% for item in reimtype %}
                                    <option class="select" {% if info.ReimType==item.Id %}selected="selected"{% else %}{% endif %} value="{{item.Id}}" >{{item.ReimTypeName}}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>科目</td>
                        <td class="td_left">
                            <select class="select userrole" name="reim_sub" id="reim_sub">
                            </select>   
                        </td >
                    </tr>
                    <tr>
                        <td>报销金额</td>
                        <td class="td_left"><input  id="reim_amount" name="reim_amount" class="input_text" type="text" value="{{info.ReimAmount}}" required></td >
                    </tr>
                    <tr >
                        <td>用途及票据说明</td>
                        <td  class="td_left" colspan='3'>
                            <textarea {{readonly}} id="reim_desc" name="reim_desc"  class="input_textarea" type="text">{{info.ReimDesc}}</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>录入人</td>
                        <td  class="td_left">
                            <select class="select userrole" name="write_person" id="write_person">
                                {% for item in write_person %}
                                    <option class="select" {% if info.WritePerson==item.UserId %}selected="selected"{% else %}''{% endif %} value="{{item.UserId}}" >{{item.UserName}}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                </table>
                <div class="bottom_button">
                    <input type="text" id="id" name="id" hidden="hidden" value="{{info.ReimId}}"/>
                    <input type="text" id="reim_sub_a" name="reim_sub_a" hidden="hidden" value="{{info.ReimSub}}"/>
                    <input type="text" id="reim_person_id" name="reim_person_id" hidden="hidden" value="{{info.ReimPerson}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="button" onclick="toPage('../../modules/finance/allReim.php?pagetype={{pagetype}}')" name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


