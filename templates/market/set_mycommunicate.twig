<?xml version="1.0" encoding="UTF-8"?>
<script src="{{url}}js/market/setmycommunicate.js" type="text/javascript"></script>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/action/actionMyCommunicate.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb" >
                <table class="tb_set" >
                    <tr align="center">
                        <td>单位名称</td>
                        <td class="td_left"><input {{readonly}} id="customer_name" name="customer_name" class="input_text" type="text" value="{{info.CompanyName}}" /><a style="color:red;" href="javascript:void(0)" onclick="checkName()" >客户检测</a></td >
                    </tr>
                    <tr>
                        <td>单位联系人</td>
                        <td  class="td_left"><input {{readonly}} id="customercontact" name="customercontact" class="input_text"  value="{{info.CompanyPerson}}"  type="text" required><a style="color:red;" href="javascript:void(0)" onclick="checkName()" >使用客户检测获取联系人</a></td>
                    </tr>
                    <tr>
                        <td>拜访沟通方式</td>
                        <td  class="td_left">        <select class="select" name="communicate_mode" id="customerlevel">
                                {% for item in communicatemode %}
                                    <option class="select" value="{{item.Id}}"  {% if info.CommunicateMode==item.Id %}selected="selected"{% else %}''{% endif %} >{{item.ModeName}}</option>
                                {% endfor %}
                            </select></td>
                    </tr>
                    <tr>
                        <td>沟通内容</td>
                        <td  class="td_left"><textarea {{readonly}}  name="communicate_content"  class="input_textarea" type="text">{{info.CommunicateContent}}</textarea></td>
                    </tr>
                    <tr>
                        <td>沟通日期</td>
                        <td  class="td_left"><input {% if info.CommunicateDate %}value="{{info.CommunicateDate}}"{% else %} value="{{"now"|date("Y-m-d")}}"{% endif %} id="communicate_date"  name="communicate_date"  class="input_text" type="text"/>

                        </td>
                    </tr>
                    <tr>
                        <td>拜访沟通人</td>
                        <td  class="td_left"><input readonly  name="communicate_person" value="{{user.UserName}}" class="input_text" type="text" value="CommunicatePerson" /></td>
                    </tr>
                    <tr>
                        <td>沟通成果</td>
                        <td  class="td_left"><textarea {{readonly}}  name="communicate_result"class="input_textarea" type="text" >{{info.CommunicateResult}}</textarea></td>
                    </tr>
                </table>
                <div class="bottom_button">
                    <input type="text" name="id" hidden="hidden" value="{{info.id}}"/>
                    <input type="text" id="customerid" name="customerid" hidden="hidden" value="{{info.CompanyId}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="reset" name="reset" class="comm_button button_clear" value="清空"/>
                    <input type="button"  onclick="toClose({{mid}},{{pid}} )"  name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


