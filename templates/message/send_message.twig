<?xml version="1.0" encoding="UTF-8"?>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/message/action/actionMessage.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb" >
                <table class="tb_set" >
                    <tr>
                        <td>标题</td>
                        <td class="td_left"><input  id="title" name="title" class="input_text" type="text" value="{{info.Title}}" required></td >
                    </tr>
                    <tr>
                        <td>时间</td>
                        <td  class="td_left"><input  id="createtime" name="createtime" class="write_date" {% if info.CreateTime %}value="{{info.CreateTime}}"{% else %} value="{{"now"|date("Y-m-d")}}"{% endif %} type="text" required></td>
                    </tr>
                    <tr>
                        <td>内容</td>
                        <td  class="td_left">
                            <textarea {{readonly}} id="content" name="content"  class="input_textarea" type="text">{{info.Content}}</textarea>
                        </td>
                    </tr>
                </table>
                <div class="bottom_button">
                    <input type="text" id="id" name="id" hidden="hidden" value="{{info.Id}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="button" onclick="toPage('../../modules/message/MessageList.php')" name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


