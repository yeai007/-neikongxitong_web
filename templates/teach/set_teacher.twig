{# empty Twig template #}
<?xml version="1.0" encoding="UTF-8"?>
<script src="{{url}}js/teach/set_teacher.js" type="text/javascript"></script>
<style>
    .error{
        color:red;
    }
</style>
<div>
    <div>
        <iframe name="myiframe" style="display:none;" onload="iframeLoad(this);"></iframe>
        <form action="../../modules/teach/action/actionTeacher.php" method="post"
              enctype='multipart/form-data' target="myiframe" id="commentForm" >
            <div class="set_content_tb">
                <table class="tb_set" >
                    <tr>
                        <td>姓名</td>
                        <td class="td_left"><input  id="teacher_name" name="teacher_name" class="input_text" type="text" value="{{info.TeacherName}}" required></td >
                    </tr>
                    <tr>
                        <td>性别</td>
                        <td  class="td_left">
                            <select class="select userrole" name="teacher_sex" id="teacher_sex">
                                <option class="select" {% if info.TeacherSex==0 %}selected="selected"{% else %}''{% endif %} value="0">男</option>
                                <option class="select" {% if info.TeacherSex==1 %}selected="selected"{% else %}''{% endif %} value="1">女</option> 
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>身份证号</td><td  class="td_left">
                            <input {{readonly}} id="teacher_pnum" name="teacher_pnum"  class="input_text" type="text" value="{{info.TeacherPNum}}"/>
                        </td>
                    </tr>
                    <tr>
                        <td>联系电话</td>
                        <td  class="td_left"><input  id="teacher_phone" name="teacher_phone" class="input_text" value="{{info.TeacherPhone}}" type="text" required></td>
                    </tr>
                    <tr>
                        <td>QQ</td>
                        <td  class="td_left"><input  id="teacher_qq" name="teacher_qq" class="input_text"  value="{{info.QQ}}"  type="text" required></td>
                        <td>微信</td>
                        <td  class="td_left"><input  id="teacher_wechat" name="teacher_wechat" class="input_text" value="{{info.Wechat}}" type="text" required></td>
                    </tr>
                    <tr>
                        <td>卡号</td>
                        <td  class="td_left"><input  id="card_num" name="card_num" class="input_text"  value="{{info.CardNum}}"  type="text" required></td>
                    </tr>
                    <tr>
                        <td>开户行</td>
                        <td  class="td_left"><input  id="opening_bank" name="opening_bank" class="input_text"  value="{{info.OpeningBank}}"  type="text" required></td> <td>开户行地址</td>
                        <td  class="td_left"><input  id="bank_address" name="bank_address" class="input_text"  value="{{info.BankAddress}}"  type="text" required></td>
                    </tr>
                    <tr>
                        <td>课师费标准</td>
                        <td  class="td_left"><input  id="fee_standard" name="fee_standard" class="input_text"  value="{{info.FeeStandard}}"  type="text" required></td>
                    </tr>
                    <tr>
                        <td>教师介绍</td>
                        <td  class="td_left"><input  id="teacher_desc" name="teacher_desc" class="input_text"  value="{{info.TeacherDesc}}"  type="text" required></td>
                    </tr>
                    <tr>
                        <td>录入人</td>
                        <td  class="td_left">
                            <select class="select userrole" name="write_person" id="write_person">
                                {% for item in write_person %}
                                    <option class="select" {% if info.WritePerson==item.UserId %}selected="selected"{% else %}''{% endif %} value="{{item.UserId}}" >{{item.UserName}}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>录入日期</td>
                        <td  class="td_left"><input  id="write_date" name="write_date" class="input_text" {% if info.WriteDate %}value="{{info.WriteDate}}"{% else %} value="{{"now"|date("Y-m-d")}}"{% endif %}  type="text" required></td>
                    </tr>
                </table>
                <div class="bottom_button">
                    <input type="text" name="id" hidden="hidden" value="{{info.TeacherId}}"/>
                    <input type="submit" name="{{btn}}"  class="comm_button button_save" value="保存"/>
                    <input type="button" onclick="toPage('../../modules/teach/allTeacher.php?pagetype={{pagetype}}')" name="close" class="comm_button button_close" value="关闭"/>
                </div>
            </div>
        </form>
    </div>
</div>


